<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taylanwhite.meh.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <!--<ImageSwitcher-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imageSwitcher"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_weight="0.61" />-->


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Video"
                android:id="@+id/btnMovie"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.61" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Notification"
                android:id="@+id/btnNotication"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.61" />

            <ImageButton
                android:id="@+id/imageDeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.61"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="750px"
                android:maxWidth="750px"
                android:minHeight="750px"
                android:minWidth="750px"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher"

                />


            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:ems="10"
                android:text="Name"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:ems="10"
                android:text="Price"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:ems="10"
                android:textSize="17sp"
                android:text="Description"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Buy" />

            <Button
                android:id="@+id/btnPastDeals"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Past Deals" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
